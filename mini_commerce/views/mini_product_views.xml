<odoo>

    <!-- Product Tree -->
    <record id="view_mini_product_tree" model="ir.ui.view">
        <field name="name">mini.product.tree</field>
        <field name="model">mini.product</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="base_price"/>
            </list>
        </field>
    </record>

    <!-- Product Form -->
    <record id="view_mini_product_form" model="ir.ui.view">
        <field name="name">mini.product.form</field>
        <field name="model">mini.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="product_type"/>
                        <field name="base_price"/>
                        <field name="image" widget="image"/>
                    </group>

                    <notebook>
                        <page string="Variants">
                            <field name="variant_ids">
                                <list editable="bottom">
                                    <field name="color"/>
                                    <field name="size"/>
                                    <field name="extra_price"/>
                                    <field name="initial_qty"/>
                                    <field name="quantity_on_hand"/>
                                    <field name="image"/>

                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>

            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mini_product" model="ir.actions.act_window">
        <field name="name">Mini Products</field>
        <field name="res_model">mini.product</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_mini_commerce_root" name="Mini Commerce" web_icon="mini_commerce,static/description/icon.png"/>
    <menuitem id="menu_mini_products" parent="menu_mini_commerce_root"
              name="Products" action="action_mini_product"/>

</odoo>
