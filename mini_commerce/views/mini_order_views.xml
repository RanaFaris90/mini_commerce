<odoo>

    <!-- Order Tree -->
    <record id="view_mini_order_tree" model="ir.ui.view">
        <field name="name">mini.order.tree</field>
        <field name="model">mini.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="customer_name"/>
                <field name="subtotal"/>
                <field name="tax"/>
                <field name="total"/>
            </list>
        </field>
    </record>

    <!-- Order Form -->
    <record id="view_mini_order_form" model="ir.ui.view">
        <field name="name">mini.order.form</field>
        <field name="model">mini.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object"
                            string="Confirm"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_name"/>
                        <field name="customer_email"/>
                        <field name="customer_phone"/>
                    </group>

                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="tax" readonly="1"/>
                        <field name="total" readonly="1"/>
                    </group>
                </sheet>
                                <chatter/>

            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mini_order" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">mini.order</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_mini_orders" parent="menu_mini_commerce_root"
              name="Orders" action="action_mini_order"/>

</odoo>
