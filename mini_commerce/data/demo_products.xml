<odoo>

    <!-- ==================================================== -->
    <!-- PRODUCT: Dress -->
    <!-- ==================================================== -->
    <record id="demo_product_dress" model="mini.product">
        <field name="name">Dress</field>
        <field name="description">Beautiful summer dress</field>
        <field name="base_price">75.0</field>
        <field name="product_type">dress</field>
        <field name="image" type="base64" file="mini_commerce/static/src/img/black_dress1.png"/>
    </record>

    <!-- Black / Small -->
    <record id="dress_variant_black_small" model="mini.product.variant">
        <field name="product_id" ref="demo_product_dress"/>
        <field name="color">Black</field>
        <field name="size">S</field>
        <field name="extra_price">0</field>
        <field name="initial_qty">10</field>
        <field name="image" type="base64" file="mini_commerce/static/src/img/black_dress1.png"/>
    </record>

    <!-- Red / Medium -->
    <record id="dress_variant_red_medium" model="mini.product.variant">
        <field name="product_id" ref="demo_product_dress"/>
        <field name="color">Red</field>
        <field name="size">M</field>
        <field name="extra_price">10</field>
        <field name="initial_qty">10</field>
        <field name="image" type="base64" file="mini_commerce/static/src/img/red_dress1.png"/>
    </record>

    <!-- Brown / X-Large -->
    <record id="dress_variant_brown_xlarge" model="mini.product.variant">
        <field name="product_id" ref="demo_product_dress"/>
